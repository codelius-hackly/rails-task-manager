<div class="container">
  <h1>My Tasks</h1>
  <div>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item"><%= link_to task.title, task_path(task) %> -
        <%= link_to "❌", task_path(task), data: { turbo_method: :delete} %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <%= link_to "Add a new task", new_task_path %>
  </div>
</div>
