<div>
  <%= form_for @task, class: "form-group" do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control"%>
    <% unless @task.new_record? %>
      <%= f.label :completed %>
      <%= f.check_box :completed, class: "form-control" %>
    <% end %>
    <%= f.submit "Save task", class: "btn btn-primary" %>
  <% end %>
</div>
